<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <!-- EXERCISE -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvExercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/padNormal"
            android:paddingTop="@dimen/padNormal"
            android:layout_marginTop="@dimen/padNormal"
            android:textStyle="bold"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorDark"
            android:text="Sommetjes telle is plezant"
            android:textSize="@dimen/textNormal"/>

        <TextView
            android:id="@+id/tvPad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/padNormal"
            android:paddingTop="@dimen/padSmall"
            android:paddingBottom="@dimen/padSmall"
            android:textStyle="bold"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorDark"
            android:textSize="@dimen/textBig"/>

    </LinearLayout>

    <!-- PAD -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:layout_weight="1"
        android:background="@drawable/gradient_top"
        android:backgroundTint="@color/colorDark_trans"
        android:orientation="vertical">

        <!-- NUMBERS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/btnPad_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="@dimen/textNumber"
                android:layout_weight="1"
                android:background="@color/colorDark_mintrans"
                android:onClick="onPadbuttonClick"/>

            <Button
                android:id="@+id/btnPad_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="@dimen/textNumber"
                android:layout_weight="1"
                android:background="@color/colorDark_mintrans"
                android:onClick="onPadbuttonClick"/>

            <Button
                android:id="@+id/btnPad_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="@dimen/textNumber"
                android:layout_weight="1"
                android:background="@color/colorDark_mintrans"
                android:onClick="onPadbuttonClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/btnpad_four"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="@dimen/textNumber"
                android:layout_weight="1"
                android:background="@color/colorDark_mintrans"
                android:onClick="onPadbuttonClick"/>

            <Button
                android:id="@+id/btnPad_five"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="@dimen/textNumber"
                android:layout_weight="1"
                android:background="@color/colorDark_mintrans"
                android:onClick="onPadbuttonClick"/>

            <Button
                android:id="@+id/btnPad_six"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="@dimen/textNumber"
                android:layout_weight="1"
                android:background="@color/colorDark_mintrans"
                android:onClick="onPadbuttonClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/btnPad_seven"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="@dimen/textNumber"
                android:layout_weight="1"
                android:background="@color/colorDark_mintrans"
                android:onClick="onPadbuttonClick"/>

            <Button
                android:id="@+id/btnPad_eight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="@dimen/textNumber"
                android:layout_weight="1"
                android:background="@color/colorDark_mintrans"
                android:onClick="onPadbuttonClick"/>

            <Button
                android:id="@+id/btnPad_nine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="@dimen/textNumber"
                android:layout_weight="1"
                android:background="@color/colorDark_mintrans"
                android:onClick="onPadbuttonClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/btnPad_zero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="@dimen/textNumber"
                android:layout_weight="1"
                android:background="@color/colorDark_mintrans"
                android:onClick="onPadbuttonClick"/>

            <Button
                android:id="@+id/btnPad_delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\u00AB"
                android:textSize="@dimen/textNumber"
                android:background="@color/colorAccent_extralight"
                android:layout_weight="1"
                android:onClick="onPaddeleteClick" />

            <Button
                android:id="@+id/btnPad_answer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="\?"
                android:textSize="@dimen/textNumber"
                android:background="@color/colorAccent_extralight"
                android:layout_weight="1"
                android:onClick="onPadsubmitClick"/>

        </LinearLayout>

    </LinearLayout>

    <!-- OUTPUT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padNormal"
            android:textAlignment="center"
            android:textColor="@color/colorDark"
            android:textSize="@dimen/textNormal"/>

    </LinearLayout>

</LinearLayout>